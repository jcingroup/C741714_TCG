@{
    ViewBag.Title = "新聞 公告 聲明";
    ViewBag.BodyClass = "News Announcement";
}

@section breadcrumb {
    <li><a href="~/News">最新訊息</a></li>
    <li><a href="~/News/AnnouncementLatest">新聞 公告 聲明</a></li>
    <li>@ViewBag.Title</li>
}

@section css {
    <link rel="stylesheet" href="~/Content/css/vendor/swiper.min.css">
}

@section scripts {
    <script src="~/Content/js/swiper.min.js"></script>
    <script>
        var swiper = new Swiper('.swiper-container', {
            pagination: {
                el: '.swiper-pagination',
                clickable: true,
            },
            navigation: {
                nextEl: '.swiper-button-next',
                prevEl: '.swiper-button-prev',
            },
        });
    </script>
}

<h1 class="sr-only">@ViewBag.Title</h1>

<ul class="tabs list-inline text-center">
    <li><a class="current" href="~/News/EventLatest">最新消息</a></li>
    <li><a href="~/News/AnnouncementList">中央新聞</a></li>
    <li><a href="~/News/AnnouncementList">中央公告</a></li>
    <li><a href="~/News/AnnouncementList">中央聲明</a></li>
</ul>

<!-- Slider main container -->
<div class="featured swiper-container">
    <!-- Additional required wrapper -->
    <div class="swiper-wrapper">
        <!-- Slides -->
        <div class="swiper-slide">
            <article class="article">
                <div class="row">
                    <div class="col-xs-5">
                        <a href="~/News/FocusContent" class="thumbnail">
                            @* 沒有圖檔的替代圖 *@
                            <img src="http://via.placeholder.com/800x510?text=No+Images" alt="">
                        </a>
                    </div>
                    <div class="col-xs-7">
                        <span class="label label-danger">中央新聞</span>
                        <small class="date">2018-01-20</small>
                        <h3><a href="~/News/FocusContent">2018 台灣民政府受國際邀約 代表台灣參加全球人才高峰會</a></h3>
                        @* 摘要 取前 255 個字，有資料的話才顯示 *@
                        <p>台灣民政府代表與蘇黎世美國商會CEO喜相逢，2018 世界網絡論壇 台灣民政府 代表台灣參加 成果豐碩！台灣民政府 打破國際困境，領台灣人第一次參加世界網絡論壇。</p>
                        <a href="~/News/FocusContent" class="more"> Read More <i class="oi" data-glyph="caret-right"></i></a>
                    </div>
                </div>
            </article>
        </div>
        <div class="swiper-slide">
            <article class="article">
                <div class="row">
                    <div class="col-xs-5">
                        <a href="~/News/EventHistoryContent" class="thumbnail">
