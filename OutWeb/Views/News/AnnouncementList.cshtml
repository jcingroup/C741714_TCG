        <article class="article">
            <div class="row">
                <div class="col-lg-3 col-sm-4 col-12 @imgClass">
                    <a href="@contentUrl" class="thumbnail">
                        @* 沒有圖檔的替代圖 *@
                        <img src="@img" alt="">
                    </a>
                </div>
                <div class="col-lg-9 col-sm-8 col-12">
                    <a class="label label-danger" href="@listLink">@data.CateIDInfo.Values.First()</a>
                    <small class="date">@data.PublishDateString</small>
                    <h3><a href="@contentUrl">@data.Title</a></h3>
                    @* 摘要 取前 145 個字，有資料的話才顯示 *@
                    <p>@Html.Raw(remark)</p>
                    <a href="@contentUrl" class="more"> @OutWeb.App_GlobalResources.Res.more <i class="oi" data-glyph="caret-right"></i></a>
                </div>
            </div>
        </article>
    }

