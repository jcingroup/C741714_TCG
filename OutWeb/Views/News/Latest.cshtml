@{
    ViewBag.Title = "最新訊息";
    ViewBag.BodyClass = "News Latest";
}

@section breadcrumb {
    <li><a href="~/News">最新訊息 活動公告</a></li>
    <li>@ViewBag.Title</li>
}

@section css {
    <link rel="stylesheet" href="~/Content/css/vendor/swiper.min.css">
}

@section scripts {
    <script src="~/Content/js/swiper.min.js"></script>
    <script>
        var swiper = new Swiper('.swiper-container', {
            pagination: {
                el: '.swiper-pagination',
                clickable: true,
            },
            navigation: {
                nextEl: '.swiper-button-next',
                prevEl: '.swiper-button-prev',
            },
        });
    </script>
}

<h1 class="title">@ViewBag.Title</h1>

@* 每頁10筆資料 *@
<div class="articles">

    <article class="article">
        <div class="row">
            <div class="col-xs-3">
                <a href="~/News/EventLatestContent" class="thumbnail">
                    @* 沒有圖檔的替代圖 *@
                    <img src="http://via.placeholder.com/800x510?text=No+Images" alt="">
                </a>
            </div>
            <div class="col-xs-9">
                @*
                活動寫真     class + label-warning
                新聞公告聲明 class + label-danger
                焦點專欄     class + label-info
                *@
                <span class="label label-warning">最新活動</span>
                <small class="date">2018-01-20</small>
                <h3><a href="~/News/EventLatestContent">2018 台灣民政府受國際邀約 代表台灣參加全球人才高峰會</a></h3>
                @* 摘要 取前 145 個字，有資料的話才顯示 *@
                <p>台灣民政府代表與蘇黎世美國商會CEO喜相逢，2018 世界網絡論壇 台灣民政府 代表台灣參加 成果豐碩！台灣民政府 打破國際困境，領台灣人第一次參加世界網絡論壇。</p>
                <a href="~/News/EventLatestContent" class="more"> Read More <i class="oi" data-glyph="caret-right"></i></a>
            </div>
        </div>
    </article>

    <article class="article">
        <div class="row">
            <div class="col-xs-3">
                <a href="~/News/AnnouncementContent" class="thumbnail">
                    <img src="http://api.ning.com/files/ymSmd4em4y3tD9NclSe*1XQevDWPd-1a*I2DF5kGhLCF11rLpSuIOsB0zctgpvX4sGlyJCd0EZjvBifYYqTbHFVodRmJ9iZe/2018118026.jpg" alt="">
