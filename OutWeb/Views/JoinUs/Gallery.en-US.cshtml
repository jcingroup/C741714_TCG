@using System.Data
@using OutWeb.App_GlobalResources
@{
    ViewBag.Title = Res.joinUs_gallery;
    ViewBag.BodyClass = "JoinUs School";
    ViewBag.subnav = "Gallery";

    DataTable dt = (DataTable)ViewData["dt"];
    string img_path = "~/Images/";
    string id = "";
    string cate_id = "";
    string cate_name = "";
    string lang_id = "";
    string lang_name = "";
    string c_title = "";
    string c_desc = "";
    string img_file = "";
}

@section breadcrumb {
    <li><a href="~/JoinUs?langCode=@OutWeb.App_GlobalResources.Res.lang">@Res.nav_joinUs</a></li>
    <li><a href="~/JoinUs/Live?langCode=@OutWeb.App_GlobalResources.Res.lang">@Res.joinUs_joinCollege</a></li>
    <li>@ViewBag.Title</li>
}

@section css {
    <link href="~/Content/js/fancybox/jquery.fancybox.min.css" rel="stylesheet">
}

@section scripts {
    <script src="~/Content/js/fancybox/jquery.fancybox.min.js"></script>
    <script src="~/Content/js/jquery.lazyload.min.js"></script>
    <script>
        $(function() {
            $("img.lazy").lazyload({
                effect : "fadeIn"
            });
        });

        // 產生圖說
        $("a[data-fancybox]").each(function(){
            var caption = $(this).children(".caption").html();
            $(this).data('caption', caption);
        });
    </script>
}

<h1 class="sr-only">@Res.nav_joinUs</h1>

@Html.Partial("sidebar")

<h2 class="title">
    <span class="underline">@ViewBag.Title</span>
    <!-- <div class="addthis_inline_share_toolbox"></div> -->
</h2>

