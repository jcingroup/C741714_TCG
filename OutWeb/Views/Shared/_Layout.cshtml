    <script>
        $(".search-trigger").click(function(){
            var icon = $(this).attr('data-glyph', $(this).attr('data-glyph') == 'magnifying-glass' ? 'x' : 'magnifying-glass');
            $(".search").toggleClass("active");
        });

        $(".share-trigger").click(function(){
            var icon = $(this).attr('data-glyph', $(this).attr('data-glyph') == 'share' ? 'x' : 'share');
            $(".share").toggleClass("active");
        });

        $(".sitemap-trigger").click(function(){
            $("#sitemap").fadeToggle();
            $("body").toggleClass("overlay");
        });
        $("#sitemap a").click(function(){
            // 同一頁換tab需重載頁面
            location.reload();
        });

        // 點選後跳到 href 指向的位置
        $('.scroll').click(function () {
            var scrollToAnchor = $(this).attr('href');
            $('html, body').stop(true).animate({
                scrollTop: $(scrollToAnchor).offset().top - 40
            }, 750);
            return false;
        });
        $('.goTop').click(function () {
            $('body, html').stop(true).animate({ scrollTop: 0 }, 800);
            return false;
        });
    </script>
