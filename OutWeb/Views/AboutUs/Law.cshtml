@using System.Data
@{
    ViewBag.Title = "法律依據";
    ViewBag.BodyClass = "AboutUs Profile";

    DataTable dt = (DataTable)ViewData["dt"];
    DataTable d_cate = (DataTable)ViewData["d_cate"];
    DataTable d_detail = (DataTable)ViewData["d_detail"];
    string id = (string)ViewData["id"];
    string cate_id = (string)ViewData["cate_id"];
    string c_id = "";
    string c_cate_id = "";
    string c_title = "";
    string c_desc = "";
    //string cate_id = "";
    string lang_id = "";
    string lang_name = "";
    string cate_name = "";
    string ci = "";
    string cj = "";
    string str_tab = "";
    string c_tab = "";
    string c_tab_nav = "";
    string cFile = "Law";
}

@section breadcrumb {
    <li><a href="~/AboutUs">什麼是台灣民政府</a></li>
    <li><a href="~/AboutUs/Position">關於我們</a></li>
    <li>@ViewBag.Title</li>
}

<!-- @section scripts {
    <script src="~/Content/js/tabs.js"></script>
} -->

<h1 class="sr-only">關於我們 - @ViewBag.Title</span></h1>

<ul class="tabs list-inline text-center">
    <li class="back"><a href="~/AboutUs/Position"><i class="oi" data-glyph="caret-left"></i> 回上層</a></li>
    @for (int i = 0; i < d_cate.Rows.Count; i++)
    {
        ci = d_cate.Rows[i]["id"].ToString();
        str_tab = "tab" + ci;
        c_cate_id = d_cate.Rows[i]["id"].ToString();
        cate_name = d_cate.Rows[i]["cate_name"].ToString();
        if (cate_id == c_cate_id)
        {
            c_tab_nav = " current";
        }
        else
        {
            c_tab_nav = "";
        }
        <li><a class="@c_tab_nav" href="@Url.Content(cFile + "?cate_id=" + c_cate_id)">@cate_name</a></li>
    }
</ul>

<div class="tab-content clearfix editor">

    @* 文章分頁 頁籤切換，只有一頁就不顯示頁籤 *@
    @if (dt.Rows.Count > 1)
    {
        <ul class="tabs list-inline">
            @for (int i = 0; i < dt.Rows.Count; i++)
            {
                c_title = dt.Rows[i]["c_title"].ToString();
                c_id = dt.Rows[i]["id"].ToString();
                ci = i.ToString();

                if (id == c_id)
                {
                    c_tab_nav = " current";
                }
                else
                {
                    c_tab_nav = "";
                }

                <li>
                    @*<a class="@c_tab_nav" href="#tab1-@ci">@c_title</a>*@
                    <a class="@c_tab_nav" href="@Url.Content(cFile + "?cate_id=" + cate_id + "&id=" + c_id)">@c_title</a>
                </li>
            }
        </ul>
    }

    @if (d_detail.Rows.Count > 0)
    {
        c_desc = d_detail.Rows[0]["c_desc"].ToString();

        <div>
            @Html.Raw(c_desc)
        </div>
    }

</div>








