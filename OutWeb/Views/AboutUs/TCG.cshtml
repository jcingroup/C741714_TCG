@using System.Data
@{
    ViewBag.Title = "認識台灣民政府";
    ViewBag.BodyClass = "AboutUs TCG";

    DataTable dt = (DataTable)ViewData["dt"];
    string c_title = "";
    string c_desc = "";
    string cate_id = "";
    string lang_id = "";
    string lang_name = "";
    string cate_name = "";
    string ci = "";
    string c_tab = "";
    string c_tab_nav = "";
}

@section breadcrumb {
    <li>@ViewBag.Title</li>
}

@section scripts {
    <script src="~/Content/js/tabs.js"></script>
}

<h1 class="title">
    <span class="underline">@ViewBag.Title</span>
    <div class="addthis_inline_share_toolbox"></div>
</h1>

<div class="tab-content clearfix editor">

    @* 文章分頁 頁籤切換，只有一頁就不顯示頁籤 *@
    @if (dt.Rows.Count > 1)
    {
        <ul class="tabs list-inline">
            @for (int i = 0; i < dt.Rows.Count; i++)
            {
                c_title = dt.Rows[i]["c_title"].ToString();
                ci = i.ToString();

                if (i == 0)
                {
                    c_tab_nav = "tab-nav current";
                }
                else
                {
                    c_tab_nav = "tab-nav";
                }

                <li>
                    <a class="@c_tab_nav" href="#tab1-@ci">@c_title</a>
                </li>
            }
        </ul>
    }


    @* 文章分頁，有資料才顯示，第一頁 class + current *@
    @if (dt.Rows.Count > 0)
    {
        for (int i = 0; i < dt.Rows.Count; i++)
        {
            ci = i.ToString();

            c_title = dt.Rows[i]["c_title"].ToString();
            c_desc = dt.Rows[i]["c_desc"].ToString();

            if (i == 0)
            {
                c_tab = "tab current";
            }
            else
            {
                c_tab = "tab";
            }

            <div class="@c_tab" id="tab1-@ci">
                <!-- <h3>@Html.Raw(c_title)</h3> -->
                @Html.Raw(c_desc)
            </div>
        }
    }
</div>
