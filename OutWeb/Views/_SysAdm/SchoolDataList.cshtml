@{
    Layout = "~/Views/Shared/_MLayout.cshtml";
    ViewBag.Crumb = "法理學院歷屆合照";
    ViewBag.subnav = "JoinUs";
    ViewBag.subnav2 = "SchoolData";
}

@section Breadcrumb {
    <ul class="breadcrumb">
        <li>加入台灣民政府 &gt;</li>
        <li>參加台灣法理學院 &gt;</li>
        <li>@ViewBag.Crumb</li>
    </ul>
}

<h3 class="title">@ViewBag.Crumb <small class="oi" data-glyph="tags">編輯</small></h3>

<div class="btn-group mb-8">
    <button type="button" class="btn success oi" data-glyph="plus" onclick="location.href='SchoolDataAdd'">新增</button>
</div>

<header class="table-head form-inline">
    <label>課程名稱</label>
    <input type="text">
    <label>語系</label>
    <select>
        <option value="">全部</option>
        <option value="">繁體中文版</option>
        <option value="">英文版</option>
        <option value="">日文版</option>
    </select>
    <label>狀態</label>
    <select>
        <option value="">全部</option>
        <option value="">發佈</option>
        <option value="">草稿</option>
    </select>
    <button class="btn">搜尋</button>
</header>
<table class="table-list table-hover table-striped">
    <colgroup>
        <col style="width: 10%">
        <col style="width: 15%">
        <col>
        <col style="width: 10%">
        <col style="width: 10%">
    </colgroup>
    <tr>
        @* 點選排序功能 (點一下遞增, 點兩下遞減)
            <button class="th-sort-toggle"></button>
            遞增 asc
            <button class="th-sort-toggle asc"></button>
            遞減 desc
            <button class="th-sort-toggle desc"></button>
        *@
        <th class="item-edit">編輯</th>
        <th><button type="button" class="th-sort-toggle">日期</button></th>
        <th><button type="button" class="th-sort-toggle">課程名稱</button></th>
        <th><button type="button" class="th-sort-toggle">語系</button></th>
        <th><button type="button" class="th-sort-toggle">狀態</button></th>
        <th><button type="button" class="th-sort-toggle">排序</button></th>
    </tr>
    @* 
    無資料
    <tr class="bg-pale-red"><td colspan="6">查無資料!</td></tr>
    *@
    <tr>
        <td>
            <button class="hover-danger oi delete-btn" title="刪除" type="button" data-glyph="trash"></button>
            <button class="hover-primary oi" title="修改" data-glyph="pencil" type="button" onclick="location.href='@Url.Content("~/_SysAdm/SchoolDataEdit")'"></button>
        </td>
        <td class="text-left">2017-01-02</td>
        <td class="text-left">
            @*
            高級班：第 + 編號 + 屆 高級班
            初級班：第 + 編號 + 期 台灣法理學院 初級班
            *@
            第H160527屆 高級班
        </td>
        <td>繁體中文版</td>
        <td>
            <span class="label-muted">草稿</span>
        </td>
        <td>2</td>
    </tr>
    <tr>
        <td>
            <button class="hover-danger oi delete-btn" title="刪除" type="button" data-glyph="trash"></button>
            <button class="hover-primary oi" title="修改" data-glyph="pencil" type="button" onclick="location.href='@Url.Content("~/_SysAdm/SchoolDataEdit")'"></button>
        </td>
        <td class="text-left">2017-01-01</td>
        <td class="text-left">第E160603期 台灣法理學院 初級班</td>
        <td>繁體中文版</td>
        <td>
            <span class="label-success">發佈</span>
        </td>
        <td>1</td>
    </tr>
</table>
<footer class="table-foot">
    <small class="pull-right">第 1 - 2 筆，共 2 筆</small>
    <nav class="pager">
        <button class="oi" data-glyph="media-step-backward" title="到最前頁" type="button" disabled></button>
        <button class="oi" data-glyph="chevron-left" title="上一頁" type="button" disabled></button>
        <span>第<input name="page" class="text-center" type="number" value="1">頁，共 1 頁</span>
        <button class="oi" data-glyph="chevron-right" title="下一頁" type="button" disabled></button>
        <button class="oi" data-glyph="media-step-forward" title="到最後頁" type="button" disabled></button>
    </nav>
</footer>