@using System.Data
@{
    Layout = "~/Views/Shared/_MLayout.cshtml";
    ViewBag.Crumb = "使用者管理";
    ViewBag.subnav = "Setting";
    ViewBag.subnav2 = "User_List";

    string SysPath = "~/_SysAdm/";
    string cFile = "User_List";
    string cFile_Add = "User_Add";
    string cFile_Del = "User_Del";
    string cFile_Edit = "User_Edit";

    DataTable dt = (DataTable)ViewData["dt"];
    DataTable d_cate = (DataTable)ViewData["d_cate"];

    int row_count = 0;
    int page_count = 50;
    int page = (int)ViewData["page"];
    int pre_page = 0;
    int top_page = 0;
    int next_page = 0;
    int end_page = 0;
    int min_row = 0;
    int max_row = 0;
    int total_page = 0;

    string id = "";
    string signin_id = "";

    string c_sort = "";
    string show = "";
    string show_class = "";
    string usr_name = "";
    string grp_name = "";
    string adm_chk = "";
    string usr_grp = "";
    string txt_title_query = (string)ViewData["txt_title_query"];
    string txt_sort = (string)ViewData["txt_sort"];
    string txt_a_d = (string)ViewData["txt_a_d"];
    string txt_cate = (string)ViewData["txt_cate"];

    string c_selected = "";

    string a_d = "";

    if (txt_a_d == "")
    {
        a_d = "asc";
    }
    else
    {
        a_d = "desc";
    }

    string class_title = "";
    string class_sort = "";
    string class_status = "";
    string class_grp = "";


    switch (txt_sort)
    {
        case "c_title":
            class_title = a_d;
            break;
        case "sort":
            class_sort = a_d;
            break;
        case "status":
            class_status = a_d;
            break;
        case "usr_grp":
            class_grp = a_d;
            break;
    }

    row_count = dt.Rows.Count;
    if (row_count % page_count > 0)
    {
        total_page = (row_count / page_count) + 1;
    }
    else
    {
        total_page = row_count / page_count;
    }

    if (page > total_page)
    {
        page = total_page;
    }
    else if (page < 1)
    {
        page = 1;
    }

    top_page = 1;

    if (page > 1)
    {
        pre_page = page - 1;
    }
    else
    {
        pre_page = 1;
    }

    if (total_page > page)
    {
        next_page = page + 1;
    }
    else
    {
        next_page = total_page;
    }

    end_page = total_page;

    min_row = page_count * (page - 1) + 1;
    if (min_row < 0)
    {
        min_row = 0;
    }
    max_row = page_count * page;
    if (max_row > row_count)
    {
        max_row = row_count;
    }

}

