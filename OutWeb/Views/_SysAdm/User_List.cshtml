        function form_ok() {
            $('#form1').submit();
        }

        function sort(c_sort) {
            var pre_sort = $('#txt_sort').val();
            var pre_a_d = $('#txt_a_d').val();
            var a_d = "";
            var s_sort = "";
            var class_a_d = "";

            s_sort = c_sort;
            if (pre_sort == c_sort) {
                if (pre_a_d == "") {
                    a_d = "desc";
                }
                else {
                    a_d = "";
                }
            }
            else {
                a_d = "";
            }

            //alert("pre_sort:" + pre_sort + ";pre_a_d:" + pre_a_d + ";a_d:" + a_d + ";s_sort=" + s_sort)

            $('#txt_sort').val(s_sort);
            $('#txt_a_d').val(a_d);

            $('#form1').submit();

        }
</script>