@{
    Layout = "~/Views/Shared/_MLayout.cshtml";
    ViewBag.Crumb = "教育專欄分類管理";
    ViewBag.subnav = "AboutUs";
    ViewBag.subnav2 = "EduKind";
}

@section Breadcrumb {
    <ul class="breadcrumb">
        <li>什麼是台灣民政府 &gt;</li>
        <li>@ViewBag.Crumb</li>
    </ul>
}

<h3 class="title">@ViewBag.Crumb</h3>

<div class="btn-group mb-8">
    <button type="button" class="btn success oi" data-glyph="plus">新增</button>
</div>

<header class="table-head form-inline">
    <label>名稱</label>
    <input type="text">
    <label>語系</label>
    <select>
        <option value="">全部</option>
        <option value="">繁體中文版</option>
        <option value="">英文版</option>
        <option value="">日文版</option>
    </select>
    <label>狀態</label>
    <select>
        <option value="">全部</option>
        <option value="">啟用</option>
        <option value="">停用</option>
    </select>
    <button class="btn">搜尋</button>
</header>
<table class="table-list table-hover table-striped">
    <colgroup>
        <col style="width: 10%">
        <col>
        <col style="width: 15%">
        <col style="width: 10%">
        <col style="width: 10%">
    </colgroup>
    <tr>
        @* 點選排序功能 (點一下遞增, 點兩下遞減)
            <button class="th-sort-toggle"></button>
            遞增 asc
            <button class="th-sort-toggle asc"></button>
            遞減 desc
            <button class="th-sort-toggle desc"></button>
        *@
        <th class="item-edit">編輯</th>
        <th><button type="button" class="th-sort-toggle">名稱</button></th>
        <th><button type="button" class="th-sort-toggle">語系</button></th>
        <th><button type="button" class="th-sort-toggle">狀態</button></th>
        <th><button type="button" class="th-sort-toggle">排序</button></th>
    </tr>
    @* 
    無資料
    <tr class="bg-pale-red"><td colspan="5">查無資料!</td></tr>
     *@
    <tr>
        <td>
            <button class="hover-danger oi delete-btn" title="刪除" type="button" data-glyph="trash"></button>
            <button class="hover-primary oi" title="修改" data-glyph="pencil" type="button"></button>
        </td>
        <td class="text-left">台灣戰爭史 回顧</td>
        <td>繁體中文版</td>
        <td>
            <span class="label-success">啟用</span>
            @* <span class="label-muted">停用</span> *@
        </td>
        <td>2</td>
    </tr>
    <tr>
        <td>
            <button class="hover-danger oi" title="取消" type="button" data-glyph="x"></button>
            <button class="hover-success oi" title="確定" type="button" data-glyph="check"></button>
        </td>
        <td class="text-left">
            <input type="text" class="form-element" value="台灣歷史 郭泓斌" required>
        </td>
        <td>
            <select required>
                <option value="" selected>繁體中文版</option>
                <option value="">英文版</option>
                <option value="">日文版</option>
            </select>
        </td>
        <td>
            <select required>
                <option value="" selected>啟用</option>
                <option value="">停用</option>
            </select>
        </td>
        <td>
            <input type="text" class="form-element" value="1">
        </td>
    </tr>
</table>
<footer class="table-foot">
    <small class="pull-right">第 1 - 2 筆，共 2 筆</small>
    <nav class="pager">
        <button class="oi" data-glyph="media-step-backward" title="到最前頁" type="button" disabled></button>
        <button class="oi" data-glyph="chevron-left" title="上一頁" type="button" disabled></button>
        <span>第<input name="page" class="text-center" type="number" value="1">頁，共 1 頁</span>
        <button class="oi" data-glyph="chevron-right" title="下一頁" type="button" disabled></button>
        <button class="oi" data-glyph="media-step-forward" title="到最後頁" type="button" disabled></button>
    </nav>
</footer>