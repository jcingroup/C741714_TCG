@using System.Data

@{
    Layout = "~/Views/Shared/_MLayout.cshtml";
    ViewBag.Crumb = "洲別 管理";
    ViewBag.subnav = "Event";
    ViewBag.subnav2 = "States_Cate";

    string SysPath = "~/_SysAdm/";
    string cFile = "States_Cate_List";
    string cFile_Add = "States_Cate_Add";
    string cFile_Del = "States_Cate_Del";
    string cFile_Edit = "States_Cate_Edit";

    DataTable dt = (DataTable)ViewData["dt"];
    DataTable d_lang = (DataTable)ViewData["d_lang"];
    int row_count = 0;
    int page_count = 50;
    int page = (int)ViewData["page"];
    int pre_page = 0;
    int top_page = 0;
    int next_page = 0;
    int end_page = 0;
    int min_row = 0;
    int max_row = 0;
    int total_page = 0;

    string cate_id = "";
    string cate_name = "";
    string cate_desc = "";
    string cate_pic = "";
    string cate_sort = "";
    string lang = "";
    string lang_name = "";

    string show = "";
    string show_class = "";
    string txt_title_query = (string)ViewData["txt_title_query"];
    string txt_sort = (string)ViewData["txt_sort"];
    string txt_a_d = (string)ViewData["txt_a_d"];
    string txt_lang = (string)ViewData["txt_lang"];
    string lang_selected = "";

    string txt_show = (string)ViewData["txt_show"];
    string show_y = "";
    string show_n = "";

    switch (txt_show)
    {
        case "Y":
            show_y = "selected";
            show_n = "";
            break;
        case "N":
            show_y = "";
            show_n = "selected";
            break;
    }

    string a_d = "";

    if (txt_a_d == "")
    {
        a_d = "asc";
    }
    else
    {
        a_d = "desc";
    }

    string class_title = "";
    string class_date = "";
    string class_sort = "";
    string class_status = "";
    string class_index = "";
    string class_lang = "";
    string img_path = "../Images/";

    switch (txt_sort)
    {
        case "n_title":
            class_title = a_d;
            break;
        case "n_date":
            class_date = a_d;
            break;
        case "sort":
            class_sort = a_d;
            break;
        case "is_index":
            class_index = a_d;
            break;
        case "status":
            class_status = a_d;
            break;
        case "lang_id":
            class_lang = a_d;
            break;
    }

    row_count = dt.Rows.Count;
    if (row_count % page_count > 0)
    {
        total_page = (row_count / page_count) + 1;
    }
    else
    {
        total_page = row_count / page_count;
    }

    if (page > total_page)
    {
        page = total_page;
    }
    else if (page < 1)
    {
        page = 1;
    }

    top_page = 1;

    if (page > 1)
    {
        pre_page = page - 1;
    }
    else
    {
        pre_page = 1;
    }

    if (total_page > page)
    {
        next_page = page + 1;
    }
    else
    {
        next_page = total_page;
    }

    end_page = total_page;

    min_row = page_count * (page - 1) + 1;
    max_row = page_count * page;
    if (max_row > row_count)
    {
        max_row = row_count;
    }
}

